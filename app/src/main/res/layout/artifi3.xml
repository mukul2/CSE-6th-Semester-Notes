                        android:textSize="25dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Intelligence: "
                        android:textColor="@color/colorAccent"
                        android:textSize="25dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=" Intelligence is the ability to apply knowledge"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=" Someone lacks knowledge of a particular subject mean they can apply their intelligence."
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="  Intelligence as real time use of information."
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="  Intelligence= application and integration of knowledge you have at your dispersonal."
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="match_parent"
