        card_view:cardCornerRadius="7dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What would a computer need to poses a Turing Test"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="The Turing Test proposed by Alan Turig (1950) was designed to provide a satisfactory operational defination of Intelligence.The Computer would need to posses the following capabilities-"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Natural language processing to enable it to communicate successfully in English"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textSize="25dp"
            android:text="Knowledge representation to store what it knows or hears"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Automated reasoning to use the stored information  to answer questions and new conclusions"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Machine learning to adapt new circumstance and to detect and extrapolate patterns"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="To pass the turing test,the computer will also need-"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Computer Vision to perceive objects  "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Robotics to manipulate objects and move about"/>
    </LinearLayout>
    </android.support.v7.widget.CardView>

